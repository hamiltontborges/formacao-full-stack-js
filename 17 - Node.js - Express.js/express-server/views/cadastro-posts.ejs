<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('partials/head.ejs') %>
</head>

<body>
    <%- include('partials/header.ejs') %>

        <section class="container">
            <%- include('partials/navbar.ejs') %>

                <article class="content">
                    <h1>Inserir Post</h1>

                    <% if (cadastrado) { %>
                        <div class="cadastro-realizado">Cadastro realizado com sucesso</div>
                    <% } %>

                    <form class="formulario" action="/salvar-post" method="post">
                        <div>
                            <label>Título</label>
                            <input name="titulo" type="text" placeholder="Digite o Título">
                        </div>
                        <div>
                            <label>Texto</label>
                            <textarea name="texto" placeholder="Digite o Texto"></textarea>
                        </div>
                        <div>
                            <button type="submit">Inserir</button>
                        </div>
                    </form>
                </article>
        </section>

    <%- include('partials/footer.ejs') %>

    <%- include('partials/foot.ejs') %>
</body>

</html>